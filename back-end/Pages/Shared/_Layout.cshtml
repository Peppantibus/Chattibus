<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Chat.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- 🔹 MODALE LOGIN -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg rounded-4 border-0">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Accedi a ChatApp</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                </div>
                <div class="modal-body">
                    <form id="loginForm">
                        <div class="form-floating mb-3">
                            <input type="text" id="login-username" class="form-control" placeholder="Username o Email" required />
                            <label for="login-username">Username o Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" id="login-password" class="form-control" placeholder="Password" required />
                            <label for="login-password">Password</label>
                        </div>
                        <button type="submit" class="btn btn-success w-100 py-2 fw-semibold">Accedi</button>
                    </form>
                    <div id="login-msg" class="text-center text-muted small mt-3"></div>
                </div>
                <div class="modal-footer border-0 text-center w-100">
                    <small>
                        Non hai un account?
                        <a href="#" data-bs-target="#registerModal" data-bs-toggle="modal" data-bs-dismiss="modal">Registrati</a>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- 🔹 MODALE REGISTRAZIONE -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow-lg rounded-4 border-0">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Crea un account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Chiudi"></button>
                </div>
                <div class="modal-body">
                    <form id="registerForm">
                        <div class="form-floating mb-3">
                            <input type="text" id="reg-username" class="form-control" placeholder="Username" required />
                            <label for="reg-username">Username</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email" id="reg-email" class="form-control" placeholder="Email" required />
                            <label for="reg-email">Email</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" id="reg-name" class="form-control" placeholder="Nome" required />
                            <label for="reg-name">Nome</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input type="password" id="reg-password" class="form-control" placeholder="Password" required />
                            <label for="reg-password">Password</label>
                        </div>
                        <button type="submit" class="btn btn-success w-100 py-2 fw-semibold">Registrati</button>
                    </form>
                    <div id="register-msg" class="text-center text-muted small mt-3"></div>
                </div>
                <div class="modal-footer border-0 text-center w-100">
                    <small>
                        Hai già un account?
                        <a href="#" data-bs-target="#loginModal" data-bs-toggle="modal" data-bs-dismiss="modal">Accedi</a>
                    </small>
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3 bg-dark text-white mt-auto">
        <p class="mb-0">Realizzato da <strong>Giuseppe Acito</strong> — © @DateTime.Now.Year</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>