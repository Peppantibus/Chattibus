@page
@model ChatModel
@{
    ViewData["Title"] = "Chat";
}

<div class="container-fluid vh-100 d-flex flex-column">

    <!-- HEADER -->
    <div class="bg-dark text-white py-3 px-4 d-flex justify-content-between align-items-center">
        <h4 class="m-0">ChatApp 💬</h4>
        <div>
            <span class="me-3">👤 @User.Identity?.Name</span>
            <button id="logoutBtn" class="btn btn-danger px-4">Esci</button>
        </div>
    </div>

    <!-- MAIN CHAT -->
    <div class="row flex-grow-1">
        <!-- Sidebar utenti -->
        <div class="col-3 col-md-2 bg-light border-end p-0">
            <div class="p-3 text-center fw-semibold border-bottom">Utenti</div>
            <ul id="userList" class="list-group list-group-flush">
                <!-- Utenti online -->
            </ul>
        </div>

        <!-- Messaggi -->
        <div class="col-9 col-md-10 d-flex flex-column p-0">
            <div id="messages" class="flex-grow-1 p-3 overflow-auto" style="background-color: #f5f5f5;">
                <!-- Messaggi in arrivo -->
            </div>

            <div class="p-3 border-top d-flex">
                <input id="messageInput" type="text" class="form-control me-2" placeholder="Scrivi un messaggio..." />
                <button id="sendButton" class="btn btn-success px-4">Invia</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/chat.js"></script>
}
